<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_110dp"
                android:layout_marginTop="@dimen/_59dp"
                android:layout_marginEnd="@dimen/_107dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/illustration" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_65dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/componente_7_1" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextViewTradix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_350dp"
                android:text="@string/tradix"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView1" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/_27dp"
                android:layout_height="@dimen/_27dp"
                android:layout_marginStart="@dimen/_8dp"
                android:layout_marginTop="@dimen/_18dp"
                android:contentDescription="@string/todo"
                app:layout_constraintStart_toEndOf="@+id/textView"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:srcCompat="@drawable/coin" />

            <TextView
                android:id="@+id/textView1"
                style="@style/TextViewSlogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/the_future_of_trading"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView3"
                style="@style/TextViewWellcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp"
                android:text="@string/welcome"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edtUsername"
                style="@style/TextUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_63dp"
                android:layout_marginTop="@dimen/_23dp"
                android:layout_marginEnd="@dimen/_62dp"
                android:autofillHints=""
                android:background="@drawable/editext_background"
                android:ems="10"
                android:hint="@string/e_mail"
                android:inputType="textPersonName"
                android:paddingStart="@dimen/_23dp"
                android:paddingTop="@dimen/_18dp"
                android:paddingBottom="@dimen/_17dp"
                android:textColorHint="#9d9d9d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView1" />

            <EditText
                android:id="@+id/edtPassword"
                style="@style/TextUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_63dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_63dp"
                android:autofillHints=""
                android:background="@drawable/editext_background"
                android:ems="10"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:paddingStart="@dimen/_23dp"
                android:paddingTop="@dimen/_18dp"
                android:paddingBottom="@dimen/_17dp"
                android:textColorHint="#9d9d9d"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtUsername" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/TextButtonOnboardingStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_63dp"
                android:layout_marginTop="@dimen/_16dp"
                android:layout_marginEnd="@dimen/_62dp"
                android:background="@drawable/button_onboarding_background"
                android:paddingTop="@dimen/_16dp"
                android:paddingBottom="@dimen/_19dp"
                android:text="@string/login"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPassword" />

            <TextView
                android:id="@+id/btnForgotPassword"
                style="@style/TextUserPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_72dp"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_92dp"
                android:text="Forgot Password?"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

            <TextView
                android:id="@+id/btnToSignUp"
                style="@style/textFuntion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginRight="@dimen/_77dp"
                android:layout_marginBottom="@dimen/_92dp"
                android:text="Sign Up"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnLogin" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>